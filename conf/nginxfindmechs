server {
	# SSL configuration
	listen [::]:443 ssl ipv6only=on; # managed by Certbot
	listen 443 ssl; # managed by Certbot
	ssl_certificate /etc/letsencrypt/live/findmechs.novaorbis.cl/fullchain.pem; # managed by Certbot
	ssl_certificate_key /etc/letsencrypt/live/findmechs.novaorbis.cl/privkey.pem; # managed by Certbot
	include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
	ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
	
	server_name findmechs.novaorbis.cl;

	location / {
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Forwarded-Proto $scheme;
		proxy_set_header Host $http_host;
		# we don't want nginx trying to do something clever with
		# redirects, we set the Host: header above already.
		proxy_redirect off;
		proxy_pass http://127.0.0.1:8000;
	}

	location /static/ {
		alias /var/www/static/;
		#alias /home/giancarlo_anfossy/Fin-D-Mechs/static/;
	}

	#location / {
		# First attempt to serve request as file, then
		# as directory, then fall back to displaying a 404.
		#try_files $uri $uri/ =404;
		#proxy_pass http://localhost:8000;
	#}
}

server {
    if ($host = findmechs.novaorbis.cl) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

	listen 80;
#	listen 80 default_server;
#	listen [::]:80 default_server;

	server_name findmechs.novaorbis.cl;
    return 404; # managed by Certbot


}
